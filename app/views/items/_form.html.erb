<%= form_with model: @item, method: method, url: path, local: true do |form| %>
  <%= form.label 'name' %>
  <%= form.text_field :name %><br>
  <%= form.label 'description' %>
  <%= form.text_field :description %><br>
  <%= form.label 'unit_price' %>
  <%= form.number_field :unit_price %><br>
  <%= form.submit 'Submit' %>
<% end %>
